        @*Suggestion form user can submit if they have any suggestions about the website.*@
        <div class="section-center col-lg-8">
            <h1>Suggestions</h1>
            <div style="width: 90%;">
                <p style="text-align: center">Please drop in your suggestions about the website here..</p>
            </div>

            @*Automatically generated by html helper, validation will be applied in the controller and model.*@
            @using (Html.BeginForm("AboutUS", "Home", FormMethod.Post, new { id = "theForm" }))
            {
                <div>
                    @Html.Label("First Name")
                    @Html.TextBoxFor(model => model.userFirstName, new { placeholder = "Enter your first name..", @class = "form-input" })
                    @Html.ValidationMessageFor(model => model.userFirstName, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.Label("Last Name")
                    @Html.TextBoxFor(model => model.userLastName, new { placeholder = "Enter your last name..", @class = "form-input" })
                    @Html.ValidationMessageFor(model => model.userLastName, "", new { @class = "text-danger" })
                </div>
                <div id="emailDiv">
                    @Html.Label("Your email")
                    @Html.TextBoxFor(model => model.userEmail, new { placeholder = "Enter your email address..", @class = "form-input" })
                    @Html.ValidationMessageFor(model => model.userEmail, "", new { @class = "text-danger" })
                </div>
                <div id="suggestionDiv">
                    @Html.Label("Your Suggestion")
                    @Html.TextAreaFor(model => model.userSuggestion, new { placeholder = "Type in your suggestions here..", @class = "form-input" })
                    @Html.ValidationMessageFor(model => model.userSuggestion, "", new { @class = "text-danger" })
                </div>
                <div>
                    <button type="submit"
                            id="suggestionBtn">
                        Submit
                    </button>
                </div>
            }
        </div>
    </div>
</section>