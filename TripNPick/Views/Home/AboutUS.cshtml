@*Site Map.*@
<div style="padding: 56px 0 6px 0; background-color: lightgray;">
    <div class="container">
        @Html.MvcSiteMap().SiteMapPath()
    </div>
</div>

@*If user submitted the suggestion form with valid data, we will show a success message.*@
@if (ViewData["info"].Equals("Success!"))
{
    <div class="successWarper">
        <div id="popupdiv" class="container alert alert-success alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>@ViewData["info"]</strong> Thank your for your valuable suggestion, we will reply you as soon as possible.
        </div>
    </div>
}

@*If user submitted the suggestion form with invalid data, we will show a warning message with a link redirect back to the form.*@
else if (ViewData["info"].Equals("Sorry!"))
{
    <div class="warningWarper">
        <div id="popupdiv" class="container alert alert-warning alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>@ViewData["info"]</strong> You did not complete the form correctly, <a href="#formSection" class="alert-link">please try it again</a>.
        </div>
    </div>
}

@*Title with a image as background.*@
