@model TripNPick.Models.DropdownList

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripAndPick</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>
<body data-spy="scroll" data-target=".navbar" data-offset="70">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">TripAndPick</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="home" class="container-fluid homeBG text-white space-xlg" style="padding-top:150px;padding-bottom:630px">
        <div class="container">
            <div class="row text-center justify-content-center section-intro">
                <div class="col-12 col-md-10 col-lg-8">
                    <h1 class="display-3">Trip & Pick</h1>
                    <span class="lead">
                        Based on your interests,
                        we will help you to find the most suitable farm.
                    </span>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form class="card card-sm">
                        <div class="card-body row no-gutters align-items-center">
                            <div class="col-sm-5">
                                <div class="dropdown">
                                    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-btn" data-toggle="dropdown">
                                        Interests
                                    </button>
                                    <div class="dropdown-menu dropdown-btn">
                                         @for (int i = 0; i < Model.interests.Count; i++)
                                         {
                                         <div class="dropdown-cb">
                                             @Html.CheckBoxFor(m => Model.interests[i].ischecked)
                                             @Model.interests[i].interestsName
                                             @Html.HiddenFor(m => Model.interests[i].interestsID)
                                             @Html.HiddenFor(m => Model.interests[i].interestsName)
                                         </div>
                                         }
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-5">
                                <div class="dropdown">
                                    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-btn" data-toggle="dropdown">
                                        States
                                    </button>
                                    <div class="dropdown-menu dropdown-btn">
                                        @for (int i = 0; i < Model.states.Count; i++)
                                        {
                                            <div class="dropdown-cb">
                                                @Html.CheckBoxFor(m => Model.states[i].ischecked)
                                                @Model.states[i].statesShortName
                                                @Model.states[i].statesName
                                                @Html.HiddenFor(m => Model.states[i].statesID)
                                                @Html.HiddenFor(m => Model.states[i].statesShortName)
                                                @Html.HiddenFor(m => Model.states[i].statesName)
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-success dropdown-btn" asp-controller="Home" asp-action="Farms">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="container-fluid bg-white" style="padding-top:70px;padding-bottom:630px">
        <h1 class="text-center">Section 2.</h1>
    </section>

    <section id="contact" class="container-fluid bg-secondary" style="padding-top:70px;padding-bottom:630px">
        <h1 class="text-center">Section 3.</h1>
    </section>
</body>
</html>