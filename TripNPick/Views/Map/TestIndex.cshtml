    function goToFarmPage(farmId) {
        var url = '@Url.Action("createTable", "Map", new { farmInfo = "ID" })'.replace("ID", farmId);
        //window.location.href = url;
        window.open(url);
    }

    function goToFarmDetails(pair) {
        @using Newtonsoft.Json;
        $.ajax({
        url: "/Map/createTable",
            type: 'post',
            contentType: "application/json; charset-utf-8",
            data: "{pair:" + JSON.stringify(pair) + "}",
            success: function (data) {
                window.location.href = "/Map/createTable";
                },
        error: function(jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            }
    });

    }

