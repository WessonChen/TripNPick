        $.get("@Url.Action("doTheDew", "Map", new { userInput = Model.combinedString + ":VIC"})", function (data, status) {
            var filter = [];
            for (i = 0; i < data.length; i++) {
                var interestsString = data[i].farm.farmId;
                marker = new google.maps.Marker({
                    position: new google.maps.LatLng(data[i].farm.farm_lat, data[i].farm.farm_lng),
                    icon: 'https://png.icons8.com/color/32/27ae60/marker.png',
                    map: map
                });
                
                var ints = data[i].interests;
                for (x = 0; x < ints.length; x++) {
                    debugger
                    if (!filter.includes(ints[x].interestId)) {
                        filter.push(ints[x].interestId)
                        iMarker = new google.maps.Marker({
                            position: new google.maps.LatLng(ints[x].interestLat, ints[x].interestLng),
                            visible: false,
                            icon: 'https://png.icons8.com/material/32/2980b9/marker.png',
                            map: map
                        });
                        interestMarkersVIC.push(iMarker);
                    }
                    var intString = ":" + ints[x].attractionId + "," + ints[x].distance;
                    interestsString = interestsString + intString;
                }
                markersVIC.push(marker);
                (function (marker) {
                    google.maps.event.addListener(marker, 'click', function () {
                        goToFarmPage(interestsString);
                    });
                })(marker);
            }
            var markersVICCluster = new MarkerClusterer(map, markersVIC,
                { imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m' });
        })

        google.maps.event.addListener(map, 'zoom_changed', function() {
