<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TripAndPick</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/landing-page.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav">@Html.ActionLink("Trip&Pick", "Index", "Home", new { area = "" }, new { @class = "navbar-brand narTitle" })</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "narItem" })</li>
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Home", new { area = ""}, new { @class = "narItem"})</li>
                    <li>@Html.ActionLink("FAQ", "Information", "Home", new { area = "" }, new { @class = "narItem" })</li>
                    <li>@Html.ActionLink("About Us", "AboutUs", "Home", new { area = "" }, new { @class = "narItem" })</li>
                    <li>@Html.ActionLink("Search", "Index", "Map", new { area = "" }, new { @class = "narItem" })</li>
                    @*<li>@Html.Partial("_LoginPartial")</li>*@
                </ul>
            </div>
        </div>
    </nav>
    <div>

        @RenderBody()
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-inline">
                            <li>
                                <a>@Html.ActionLink("Home", "Index", "Home")</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a>@Html.ActionLink("FAQ", "Information", "Home")</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a>@Html.ActionLink("About Us", "AboutUs", "Home")</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a>@Html.ActionLink("Search", "Index", "Map")</a>
                            </li>
                        </ul>
                        <p class="copyright text-muted small">&copy; @DateTime.Now.Year - TripAndPick</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    @*<script src="~/Scripts/jquery.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
